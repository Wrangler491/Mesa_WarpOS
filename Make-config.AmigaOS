wos:
	$(MAKE) -f Makefile.AmigaOS targets		\
	"GL_LIB = libMesaGL.a"				\
	"GLU_LIB = libMesaGLu.a"			\
	"CC = gcc"					\
	"CXX = g++"					\
	"CFLAGS = $(OPTI) $(PROC) $(WARN) $(MORE)"	\
	"MAKELIB = $(ROOT)/bin/mklib.AmigaOS"		\
